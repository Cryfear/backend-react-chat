{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "types": [],
    "lib": ["ES6"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@alias/*": [
        "path/to/alias/*"
      ]
    },
    "rootDir": "./src",
    "allowJs": true,
  },
  "include": ["src/**/*/"],
  "exclude": ["node_modules"],
  "ts-node": {"esm": true}
}